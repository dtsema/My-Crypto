                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l6"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l7"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l8"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l9"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l10"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/w_l11"
                        android:layout_width="match_parent"
