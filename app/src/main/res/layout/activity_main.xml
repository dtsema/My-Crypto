                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView7"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView8"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView9"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView10"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:isScrollContainer="false"
                    android:visibility="invisible">

                </WebView>

                <WebView
                    android:id="@+id/cryptoView11"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView12"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView13"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView14"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView15"
                    android:layout_width="match_parent"
