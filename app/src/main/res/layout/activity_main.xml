<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.mycrypto.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/TickerLinearLayout"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <WebView
                    android:id="@+id/cryptoView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:isScrollContainer="false"
                    android:visibility="invisible">

                </WebView>

                <WebView
                    android:id="@+id/cryptoView1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <WebView
                    android:id="@+id/cryptoView4"
